{
  "name": "react-boilerplate-9000",
  "version": "1.0.0",
  "description": "the react boilerplate from the future",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "build-babel": "npm run build-babel-server && npm run build-babel-client",
    "build-babel-server": "babel src/server --out-dir ./dist",
    "build-babel-client": "babel src/client --copy-files --out-dir ./dist/public",
    "start": "node ./dist/server.js",
    "test": "jest ./src",
    "clean": "rimraf dist node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaosaari/react-boilerplate-9000.git"
  },
  "keywords": [
    "react",
    "boilerplate"
  ],
  "author": "Janne Saari",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jaosaari/react-boilerplate-9000/issues"
  },
  "homepage": "https://github.com/jaosaari/react-boilerplate-9000#readme",
  "dependencies": {
    "express": "^4.16.3",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "rimraf": "^2.6.2",
    "webpack": "^4.5.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.3",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.3.1",
    "webpack-cli": "^2.0.14",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./src/enzyme.setup.js",
    "setupFiles": [
      "raf/polyfill"
    ]
  }
}
